// rest of products

const idProductListSlice1 = [1,2,3,4,5,7];
const productListSlice1 = fnGetProductListForEachId(idProductListSlice1,productList);
let productListSlice1Summary = fnGetProductSummaryList(productListSlice1)(configApp);

const idProductListTitleSlice2 = new Map([
  [11,'Estante para tender la ropa de 3 niveles'],
  [12,'Tendedero para secar ropa plegable con alas laterales'],
  [14,'Tendedero colgador de ropa plegable de pared'],
  [15,'Estante de secado para tender la ropa de 3 niveles'],
  [17,'Tender para la ropa de dos nivels'],
  [18,'Tender para colgar ropa, vertical en acero'],
]);
