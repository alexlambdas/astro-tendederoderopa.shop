const productId10 = fnGetProductListForEachId([10],productList);
let productId10Summary = fnGetProductSummaryList(productId10)(configApp);
productId10Summary = fnAddDescripcionToImages(productId10Summary, keywordAltProductId10);
productId10Summary = fnAddTitleToImages(productId10Summary,keywordTitleProductId10);

// #21
const keywordAltProductId21 = new Map([
  [21,'Tendedero de 4 niveles con alas laterales plegables, sosteniendo ropa, de color blanco.']
]);
const keywordTitleProductId21 = new Map([[21,'Tendedero 4 niveles con alas laterales plegables']]);
const productId21 = fnGetProductListForEachId([21],productList);
let productId21Summary = fnGetProductSummaryList(productId21)(configApp);
productId21Summary = fnAddDescripcionToImages(productId21Summary, keywordAltProductId21);
productId21Summary = fnAddTitleToImages(productId21Summary,keywordTitleProductId21);

// #53
const keywordAltProductId53 = new Map([
  [21,'Tendedero de 3 niveles con tr√≠pode y vertical, con 48 clips que sostiene ropa en cada nivel']
]);
const keywordTitleProductId53 = new Map([[53,'Tendedero 3 niveles con tr√≠pode y vertical']]);
const productId153 = fnGetProductListForEachId([53],productList);
let productId53Summary = fnGetProductSummaryList(productId153)(configApp);
productId53Summary = fnAddDescripcionToImages(productId53Summary, keywordAltProductId53);
productId53Summary = fnAddTitleToImages(productId53Summary,keywordTitleProductId53);

// rest of products

const idListProductTitle = new Map([
  [4,''],
  [5,''],
  [11,'Tendedero plegable 3 niveles con ruedas y de hierro'],
  [15,'Colgador de ropa 3 niveles con pinzas para la ropa'],
  [17,'Tendedero plegable 3 niveles con alas laterales'],
  [20,''],
]);

const idListProductAlt = new Map([
  [4,''],
  [5,''],
  [11,'Tendedero plegable de 3 niveles con ruedas y de hierro para ropa de cama, calcetines, ropa, bufandas, etc.'],
  [15,'Colgador de ropa de 3 niveles con pinzas para la ropa, vertical, y barras de colgar en forma de estrella en cada nivel'],
  [17,'Tendedero plegable de 3 niveles con alas laterales en la parte superior, tendedero en forma de A may√∫scula'],
  [20,''],
]);

const idListProduct = [4,5,11,15,17,20];
const similarProducts = fnGetProductListForEachId(idListProduct,productList);
let similarProductsSummaryList = fnGetProductSummaryList(similarProducts)(configApp);
similarProductsSummaryList = fnAddTitleToImages(similarProductsSummaryList,idListProductTitle);
similarProductsSummaryList = fnAddDescripcionToImages(similarProductsSummaryList, idListProductAlt);

---

<MainLayout page="plegable-por-niveles">
  <main class="pt-20 lg:pt-0">
    <IntroImageComponent page="plegable-por-niveles"/>
    <br>
    <br>
    <div class="flex flex-col lg:flex-row">
      <AsideSubMenuComponent category="Plegable" subCategoryName="Por niveles" />
      <section class="text-gray-800 font-mono w-11/12 m-auto lg:w-2/3">
        <div class="grid lg:grid-cols-2 gap-8">
					<ProductPlusVideoComponent products={productId8Summary}/>
					<ProductPlusVideoComponent products={productId10Summary}/>
          <ProductPlusVideoComponent products={productId21Summary}/>
